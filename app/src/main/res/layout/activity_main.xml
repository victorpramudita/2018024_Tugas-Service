<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333232"
    tools:context="com.example.aplikasi_musik.MainActivity">

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="253dp"
        android:layout_height="363dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/fotoku"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:text="Play"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/play"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Pause"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pause"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Stop"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_above="@+id/gambar"
        android:layout_alignStart="@+id/gambar"
        android:layout_alignEnd="@+id/gambar"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="-396dp"
        android:text="VICTOR PRAMUDITA"
        android:textColor="#FFC107" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gambar"
        android:layout_alignStart="@+id/gambar"
        android:layout_alignEnd="@+id/gambar"
        android:layout_centerVertical="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="-391dp"
        android:text="2018024"
        android:textColor="#FFC107" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="219dp"
        android:layout_height="72dp"
        android:layout_above="@+id/gambar"
        android:layout_alignStart="@+id/gambar"
        android:layout_alignEnd="@+id/gambar"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="21dp"
        android:text="Jika mecintamu adalah kesalahan terbesar"
        android:textAlignment="center"
        android:textColor="#89E5F1"
        android:textSize="20dp" />

</RelativeLayout>